{
  "name": "tsagent",
  "version": "1.2.14",
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "npm run build:desktop && npm run build:cli",
    "build:desktop": "cd apps/desktop && npm run build",
    "build:cli": "cd apps/cli && npm run build",
    "start:desktop": "cd apps/desktop && npm run start",
    "start:cli": "cd apps/cli && npm run start --",
    "dev:desktop": "cd apps/desktop && npm run watch",
    "dev:cli": "cd apps/cli && npm run dev",
    "publish:all": "./scripts/publish.sh",
    "publish:dry-run": "./scripts/publish.sh --dry-run"
  }
}