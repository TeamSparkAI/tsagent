{
  "name": "@tsagent/core",
  "version": "1.2.7",
  "description": "Typescript API for agents",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js"
    },
    "./runtime": {
      "import": "./dist/esm/runtime.js",
      "require": "./dist/cjs/runtime.js"
    }
  },
  "files": [
    "dist"
  ],
  "typesVersions": {
    "*": {
      "*": [
        "./dist/esm/*"
      ]
    }
  },
  "license": "MIT",

  "scripts": {
    "build": "npm run build:esm && npm run build:cjs",
    "build:esm": "mkdir -p dist/esm && echo '{\"type\": \"module\"}' > dist/esm/package.json && npx tsc -p tsconfig.esm.json",
    "build:cjs": "mkdir -p dist/cjs && echo '{\"type\": \"commonjs\"}' > dist/cjs/package.json && npx tsc -p tsconfig.cjs.json",
    "dev": "npx ts-node src/index.ts",
    "test": "jest"
  },
  "dependencies": {
    "@types/uuid": "^10.0.0",
    "uuid": "^11.1.0",
    "js-yaml": "^4.1.0",
    "@anthropic-ai/sdk": "^0.39.0",
    "@aws-sdk/client-bedrock": "^3.787.0",
    "@aws-sdk/client-bedrock-runtime": "^3.785.0",
    "@google/genai": "^1.14.0",
    "@modelcontextprotocol/sdk": "^1.18.1",
    "ollama": "^0.5.14",
    "openai": "^4.89.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/uuid": "^10.0.0",
    "@types/js-yaml": "^4.0.9",
    "@types/jest": "^29.5.14",
    "typescript": "^5.3.0",
    "ts-node": "^10.9.1",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.0"
  }
}